<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseAppTheme" parent="android:Theme.Material" tools:targetApi="lollipop">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition" tools:targetApi="lollipop">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition" tools:targetApi="lollipop">@android:transition/slide_top</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.PremierLeagueTeam.NoActionBar"/>

</resources>